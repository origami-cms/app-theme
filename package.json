{
  "name": "origami-app-theme",
  "version": "0.0.0",
  "description": "Theme app for Origami CMS",
  "main": "manifest.js",
  "repository": "https://github.com/origami-cms/plugin-theme",
  "author": "Tristan Matthias <hello@tristanmatthias.com>",
  "license": "MIT",
  "scripts": {
    "db:init": "mongo db-scripts/init.js",
    "db:clear": "mongo db-scripts/clear.js",
    "db:reset": "yarn db:clear; yarn db:init",
    "test": "yarn db:reset; nyc mocha --exit",
    "gzip": "gzip-all 'scripts/**/*.*(js|css|svg|png|jpg|jpeg)'",
    "prebuild": "rm -rf pages/; rm -rf routes/; rm -rf scripts/",
    "clean-scripts": "find ./scripts -not -name '*.min.js*' -delete",
    "build:rollup": "rollup -c",
    "build:sass": "sass-render src/scripts/components/**/*.scss --suffix=-css.ts",
    "build:ts": "tsc -p src/routes/tsconfig.json & tsc -p src/scripts/tsconfig.json;",
    "build": "yarn build:sass; yarn build:ts; yarn build:rollup; cp -r src/pages ./",
    "build:prod": "NODE_ENV=production yarn build; yarn gzip; yarn clean-scripts",
    "watch:ts": "tsc -w",
    "watch:sass": "yarn build:sass -w",
    "watch:rollup": "yarn build:rollup -w",
    "watch": "yarn watch:sass & yarn watch:ts & yarn watch:rollup",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "@polymer/lit-element": "^0.5.2",
    "@types/seamless-immutable": "^7.1.2",
    "node-sass": "^4.9.2",
    "rollup-plugin-multi-entry": "^2.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.0.0",
    "codecov": "^3.0.2",
    "express": "^4.16.3",
    "gzip-all": "^1.0.0",
    "lit-html": "^0.10.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "origami-cms": "^0.2.12-alpha.2",
    "origami-core-lib": "^0.3.10",
    "origami-zen": "^0.4.0",
    "pwa-helpers": "^0.8.3",
    "redux": "^4.0.0",
    "rollup": "^0.64.1",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel-minify": "^5.0.0",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-strip": "^1.1.1",
    "seamless-immutable": "^7.1.3",
    "tslint": "^5.10.0",
    "tslint-config-origami": "^1.0.3",
    "typescript": "^2.9.2",
    "wc-sass-render": "^1.1.0",
    "zen-css": "^1.1.13"
  }
}
